<main>
  <div class="container px-4 px-lg-5">
    <div class="row gx-4 gx-lg-5 d-flex justify-content-center">
      <h1 class="col-lg-8 text-center text-white">Category: <%= @category.name %></h1>
    </div>
    
    <% if logged_in? && current_user.admin? %>
      <div class="text-center mt-4">
        <%= link_to 'Edit category name', edit_category_path(@category), class: "btn btn-primary" %>
      </div>
    <% end %>
    
    <div class="flickr_pagination mt-4">
      <%= will_paginate @articles, :container => false %>
    </div>
    
    <%= render 'articles/articles' %>
    
    <div class="flickr_pagination my-4">
      <%= will_paginate @articles, :container => false %>
    </div>
    
  </div>
</main>