<%= render 'shared/errors', obj: @user %>
<%= form_with(model: @user, local: true) do |f| %>

  <div class="form-floating mb-4">
    <%= f.text_field :username, class: "form-control", placeholder: "Your Name" %>
    <%= f.label :username %>
  </div>
  
  <div class="form-floating mb-4">
    <%= f.email_field :email, class: "form-control", placeholder: "Your Email" %>
    <%= f.label :email %>
  </div>
  
  <div class="form-floating mb-4">
    <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
    <%= f.label :password %>
  </div>
  
  <div class="d-grid col-6 mx-auto mb-4">
    <%= f.submit "Sign up", class: "btn btn-primary btn-lg" %>
  </div>

<% end %>